{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/components/*": ["src/components/*"],
            "~/types/*": ["src/types/*"]
        },
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"]
}
